<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.halfplatepoha.jisho.kanji.KanjiDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <!-- WHAT TO DO WITH FAV and ADD TO LIST -->

        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            app:srcCompat="@drawable/fav"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageButton
            android:id="@+id/btnAddToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/btnFav"
            android:background="@null"
            app:srcCompat="@drawable/ic_add_to_list"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            app:srcCompat="@drawable/ic_back"
            android:rotation="180"
            android:padding="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tvKanji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:textSize="84sp"
            android:padding="16dp"
            tools:text="月" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.github.badoualy.kanjistroke.KanjiStrokeView
                android:id="@+id/ivKanjiPlay"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btnAddNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryVeryLight"
                android:text="+ note"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvReadingsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimaryVeryLight"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="10dp"
            android:text="R E A D I N G S"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/readingsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvReadingsHeader"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout android:id="@+id/japanese"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/flag_japan"/>

                <TextView android:id="@+id/tvJapaneseReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sample text"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout android:id="@+id/korean"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/flag_south_korea"/>

                <TextView android:id="@+id/tvKoreanReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sample text"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout android:id="@+id/chinese"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/flag_china"/>

                <TextView android:id="@+id/tvChineseReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sample text"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/componentsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvComponentsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimaryVeryLight"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="10dp"
            android:text="C O M P O N E N T S"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvComponents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvComponentsHeader"
            android:layout_margin="10dp"
            android:textSize="18sp"
            tools:text="つき；ゲツ" />

    </RelativeLayout>

</LinearLayout>
