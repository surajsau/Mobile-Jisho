<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/background"
    tools:context="com.halfplatepoha.jisho.settings.SettingsActivity">

    <com.halfplatepoha.jisho.view.CustomTextView android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:text="Options"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"/>

    <ImageButton android:id="@+id/back"
        android:layout_width="?android:actionBarSize"
        android:layout_height="?android:actionBarSize"
        app:srcCompat="@drawable/ic_back"
        android:rotation="180"
        android:background="@null"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:background="@color/colorPrimaryLight" />

        <RelativeLayout android:id="@+id/downloadView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@color/colorPrimaryVeryLight">

            <com.halfplatepoha.jisho.view.CustomTextView android:id="@+id/offlineEnableLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Offline Mode" />

            <com.halfplatepoha.jisho.view.CustomTextView android:text="Offline version has been updated with stroke order, example sentences and lot more. Click 'Update' to enjoy more detailed offline content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@id/offlineEnableLabel"
                android:id="@+id/tvDownloadCaution"/>

            <com.halfplatepoha.jisho.view.CustomTextView android:id="@+id/tvDownloading"
                android:text="Downloading..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_below="@id/tvDownloadCaution"/>

            <Button android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:background="@drawable/rounded_rectangle_primary_light"
                android:textColor="@color/white"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvDownloadCaution"
                android:textAllCaps="false"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/offlineView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.halfplatepoha.jisho.view.CustomTextView android:id="@+id/offlineLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/offline_search" />

            <com.halfplatepoha.jisho.SwitchButton
                android:id="@+id/swtchOffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:backColor="@color/colorOn"
                app:backRadius="12dp"
                android:textSize="12sp"
                app:textOff="OFF"
                app:textOn="ON"
                android:textColor="@color/white"
                app:thumbColor="@color/white"
                app:thumbRadius="10dp" />

        </RelativeLayout>

        <com.halfplatepoha.jisho.view.CustomTextView android:text="Since this is the initial offline version, detailed information similar to online mode may not be available for all searches."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:padding="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/offlineWarning"
            android:background="@color/colorPrimaryVeryLight"
            android:layout_below="@id/offlineLabel"/>

        <com.halfplatepoha.jisho.view.CustomTextView
            android:id="@+id/tvAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:text="About" />

        <com.halfplatepoha.jisho.view.CustomTextView
            android:id="@+id/tvLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:text="License information" />

        <Button android:id="@+id/btnExportDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@color/colorPrimaryLight"
            android:text="Export DB"
            android:textColor="@color/white"/>

        <com.halfplatepoha.jisho.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v3.0"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:textSize="10sp"/>

    </LinearLayout>

</RelativeLayout>
