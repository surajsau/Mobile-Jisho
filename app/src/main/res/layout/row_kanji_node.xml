<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout android:id="@+id/verticalDashContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View android:id="@+id/verticalDashMiddle"
            android:layout_width="1dp"
            android:layout_height="100dp"
            tools:visibility="gone"
            android:visibility="gone"
            android:background="@color/colorPrimaryLight"/>

        <View android:id="@+id/verticalDashLast"
            android:layout_width="1dp"
            android:layout_height="11dp"
            tools:visibility="gone"
            android:visibility="gone"
            android:background="@color/colorPrimaryLight"/>

        <View android:id="@+id/verticalDashFirst"
            android:layout_width="1dp"
            android:layout_height="100dp"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryLight"/>

    </RelativeLayout>

    <View android:id="@+id/dashBefore"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/verticalDashContainer"
        android:background="@color/colorPrimaryLight"/>

    <com.halfplatepoha.jisho.view.CustomTextView android:id="@+id/tvKanjiNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ã‚¿"
        android:layout_toRightOf="@id/dashBefore"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"/>

    <View android:id="@+id/dashAfter"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/tvKanjiNode"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryLight"/>

    <LinearLayout android:id="@+id/childContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dashAfter"
        android:orientation="vertical"/>

</RelativeLayout>