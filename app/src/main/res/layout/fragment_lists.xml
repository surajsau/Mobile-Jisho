<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.halfplatepoha.jisho.lists.listsfragment.ListsFragment">

    <RelativeLayout android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryVeryLight"
        android:padding="16dp"
        android:visibility="visible"
        tools:visibility="visible">

        <com.halfplatepoha.jisho.view.CustomTextView
            android:id="@+id/tvListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Lists"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="36sp" />

        <Button android:id="@+id/btnAddNewList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_list"
            android:drawablePadding="5dp"
            android:text="Add list"
            android:background="@null"
            app:srcCompat="@drawable/ic_add_to_list"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="@color/colorPrimaryLight"
            android:textAllCaps="false"
            android:padding="5dp"/>

        <LinearLayout android:id="@+id/editView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center_horizontal">

            <com.halfplatepoha.jisho.view.CustomTextView
                android:id="@+id/tvItemsSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="18sp"
                tools:text="10 lists selected" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEditList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_delete" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlLists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:listitem="@layout/row_list" />

    <LinearLayout
        android:id="@+id/list_zero_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.halfplatepoha.jisho.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No lists yet" />

    </LinearLayout>


</RelativeLayout>
